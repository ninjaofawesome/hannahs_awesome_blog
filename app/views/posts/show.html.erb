<h1>Show a post.</h1>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>


<p><strong> Edit this post:</strong><%= link_to 'Edit', edit_post_path %></p>

<p><strong> Its Just Perfect!</strong><%= link_to 'Post',  new_post_path %></p>

<h1>Other Posts You've written</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
     <td><%= link_to 'Delete', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure? This is forever!' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Go Back', posts_path %>





